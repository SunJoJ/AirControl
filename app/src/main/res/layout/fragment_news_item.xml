<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/newsTitleTextView"
        android:layout_width="match_parent"
        android:layout_marginEnd="160dp"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:textStyle="bold"
        android:text="@string/common_google_play_services_enable_text"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/newsImageView"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/newsTitleTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/newsDateTextView"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:text="@string/current_data"
        android:layout_height="20dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintTop_toBottomOf="@id/newsTitleTextView"/>


</androidx.constraintlayout.widget.ConstraintLayout>