<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corner_notification">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notificationColorImageView"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:background="@drawable/red_rounded_corner"/>

            <TextView
                android:id="@+id/aqiNumberNotification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="-60dp"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:text="999 AQI"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/notificationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addressNotification"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Test"
                    android:paddingLeft="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/notificationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="11:20"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/detailsNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Indeks jakosci - dobry"
                android:lines="1"
                android:ellipsize="end"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>


    </LinearLayout>

</LinearLayout>