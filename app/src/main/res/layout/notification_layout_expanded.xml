<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner_notification">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/notificationColorImageView"
                    android:layout_width="60dp"
                    android:layout_height="56dp"
                    android:background="@drawable/red_rounded_corner"/>

                <TextView
                    android:id="@+id/aqiNumberNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-60dp"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:text="150 AQI"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/notificationDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addressNotification"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="Wroclaw - Korzeniowskiego"
                        android:paddingLeft="5dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:paddingTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />

                    <TextView
                        android:id="@+id/notificationTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="11:20"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/detailsNotification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Jakość powietrza - zła"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/suggestions"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <RelativeLayout
                android:id="@+id/firstAdviceIcon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/rounded_corner">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/window"
                    android:scaleX="0.7"
                    android:scaleY="0.7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondAdviceIcon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bikecycle_512x512_512"
                    android:scaleX="0.7"
                    android:scaleY="0.8"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/thirdAdviceIcon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mask_icon"
                    android:scaleX="0.7"
                    android:scaleY="0.8"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/adviceBackground"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:elevation="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner">

            <TextView
                android:id="@+id/adviceText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:text="Lepiej zamknij okno."
                android:textSize="14dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>